<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SongPlayerActivity">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/song_player_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/song_player_name"
                style="@style/player_text"/>
            <TextView
                android:id="@+id/song_player_artist"
                style="@style/player_text"/>
            <TextView
                android:id="@+id/song_player_duration"
                style="@style/player_text"/>
            <TextView
                android:id="@+id/song_player_url"
                style="@style/player_text"
                android:autoLink="web"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/prev_button"
                style="@style/player_button"
                android:src="@drawable/baseline_skip_previous_black_36"/>
            <ImageButton
                android:id="@+id/play_button"
                style="@style/player_button"
                android:src="@drawable/baseline_play_arrow_black_36"/>
            <ImageButton
                android:id="@+id/next_button"
                style="@style/player_button"
                android:src="@drawable/baseline_skip_next_black_36"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>